<!DOCTYPE html>
<html lang="pt-br">
<head>
    <link rel="stylesheet" href="stylesheets/style.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro</title>
</head>
<body>
    <div class="wrapper-dinamico">
        <div class="fundo-branco">
            <% if(error!=""){ %>
                <div>Senha divergente</div>
            <% } %>
            <h2 class="titulo-login">Cadastro Vendedor</h2>
            <img class="icone-login" src="images/icone-carrinho-verde.png">
            <form id="form-cliente" action="/cadastro-vendedor" method="POST">
                <input class="input" type="text" placeholder="Nome" name="nome" required>
                <input class="input" type="text" placeholder="CPF" name="cpf" id="cpf" maxlength="14" required>
                <input class="input" type="text" placeholder="Email" name="email" required>
                <input class="input" type="text" placeholder="Telefone" name="telefone" id="telefone" maxlength="14" required>
                <input class="input" type="password" placeholder="Senha" name="senha" required>
                <input class="input" type="password" placeholder="Confirmar Senha" name="senhaConf" required>
                <div class="div-input-localidade">
                    <input class="input" id="input-cidade" type="text" placeholder="Cidade" name="cidade"required>
                    <input class="input" id="input-uf" type="text" placeholder="UF" name="uf" required>
                </div>
                <div class="div-pagamento">
                    <h3>Formas de pagamento</h3>
                    <label for="forma-dinheiro" class="container">
                        <input class="check-pagamento" type="checkbox" id="forma-dinheiro" name="formaPagamento" value="dinheiro">
                        Dinheiro
                    </label>
                    <label for="forma-debito" class="container">
                        <input class="check-pagamento" type="checkbox" id="forma-debito" name="formaPagamento" value="debito">
                        Débito
                    </label>
                    <label for="forma-credito" class="container">
                        <input class="check-pagamento" type="checkbox" id="forma-credito" name="formaPagamento" value="credito">
                        Crédito
                    </label>
                    <label for="forma-pix" class="container">
                        <input class="check-pagamento" type="checkbox" id="forma-pix" name="formaPagamento" value="pix"> 
                        Pix
                    </label>
                </div>
                <input class="btn-logar-laranja" type="submit" value="Cadastrar-se">
            </form>
            <div class="div-link">
                <a class="link-cadastro-verde" href="/cadastro-cliente">Sou Cliente</a>
                <a class="link-cadastro-verde" href="/logar">Já tenho uma conta</a>
            </div>
        </div>
    </div>
    <script>
        const cpf = document.querySelector("#cpf");

        cpf.addEventListener("keypress", () => {
        let value = cpf.value.replace(/[^0-9]/g, "").replace(/^([\d]{3})([\d]{3})?([\d]{3})?([\d]{2})?/, "$1.$2.$3-$4");
        cpf.value = value;
        });

        const telefone = document.querySelector("#telefone");

        telefone.addEventListener("keypress", () => {
        let value = telefone.value.replace(/[^0-9]/g, "").replace(/^([\d]{2})([\d]{5})?([\d]{4})?/, "($1)$2-$3");
        telefone.value = value;
        });
    </script>
</body>
</html>